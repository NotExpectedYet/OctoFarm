#!/bin/bash
# This file was autogenerated by node-deb {{ node_deb_version }}
set -e
set -o pipefail


## James Mackay Customisation
VER="14.16.0"
ARCH="x86"
if [ `arch | grep 64` ]
then
  ARCH="x64"
fi

## Chec and Install node binary if it doesn't exist
##
if [ ! -f /usr/local/bin/node ]
then
	echo "Downloading nodejs..."
	pushd /tmp
	wget -c "https://nodejs.org/dist/v${VER}/node-v${VER}-linux-${ARCH}.tar.gz"
	rm -rf /tmp/node-v${VER}-linux-${ARCH}
	tar xf node-v${VER}-linux-${ARCH}.tar.gz -C /tmp/
	##Installing node
	echo "Intalling nodejs..."
	cp -a /tmp/node-v${VER}-linux-${ARCH}/* /usr/local/
fi

