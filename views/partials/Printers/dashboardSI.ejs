<div class="row">
  <div class="col-lg-12 text-center text-light">
    <b><i class="fas fa-hourglass"></i> System Uptime</b>
    <center>
      <span id="systemUpdate" style="font-size:0.8rem;"><%- helpers.generateTime(systemInfo.sysUptime.uptime)%></span>
    </center>
    <b class="mt-1"><i class="fas fa-microchip"></i> CPU Usage</b><br />
    <span class="mb-0" style="font-size:0.8rem;">
      <i class="fas fa-square text-warning"></i> <b>System: </b><span id="systemCPU"><%= Math.round(
        systemInfo.cpuLoad.currentload_system * 10 ) / 10 %>%</span>
      <i class="fas fa-square text-info"></i> <b>OctoFarm: </b><span id="octofarmCPU"><%= Math.round(
        systemInfo.sysProcess.pcpu * 10 ) / 10 %>%</span>
      <i class="fas fa-square text-primary"></i> <b>User: </b><span id="userCPU"><%= Math.round(
        systemInfo.cpuLoad.currentload_user * 10 ) / 10 %>%</span> <br />
        <i class="fas fa-square text-success"></i> <b>Free: </b><span id="freeCPU"><%= 100 - Math.round(((Math.round( systemInfo.sysProcess.pcpu * 10) / 10 + Math.round( systemInfo.cpuLoad.currentload_user * 10) / 10 + Math.round( systemInfo.cpuLoad.currentload_system * 10) / 10)) * 10 ) / 10 %>%</span> <br />
      </span>
    <div class="progress mb-0">
      <div id="systemCPUProg"
        class="progress-bar progress-bar-striped bg-warning"
        role="progressbar"
        style="width: <%= Math.round( systemInfo.cpuLoad.currentload_system * 10 ) / 10 %>% "
        aria-valuenow="<%= Math.round( systemInfo.cpuLoad.currentload_system * 10 ) / 10 %>% "
        aria-valuemin="0"
        aria-valuemax="100"
      ></div>
      <div id="octofarmCPUProg"
        class="progress-bar progress-bar-striped bg-info"
        role="progressbar"
        style="width: <%= Math.round( systemInfo.sysProcess.pcpu * 10 ) / 10 %>% "
        aria-valuenow="<%= Math.round( systemInfo.sysProcess.pcpu * 10 ) / 10 %>%"
        aria-valuemin="0"
        aria-valuemax="100"
      ></div>
      <div id="userCPUProg"
        class="progress-bar progress-bar-striped bg-primary"
        role="progressbar"
        style="width: <%= Math.round( systemInfo.cpuLoad.currentload_user * 10 ) / 10 %>% "
        aria-valuenow="<%= Math.round( systemInfo.cpuLoad.currentload_user * 10 ) / 10 %>%"
        aria-valuemin="0"
        aria-valuemax="100"
      ></div>
      <div id="remainingCPUProg"
        class="progress-bar progress-bar-striped bg-success"
        role="progressbar"
        style="width:   <%= 100 - Math.round(((Math.round( systemInfo.sysProcess.pcpu * 10) / 10 + Math.round( systemInfo.cpuLoad.currentload_user * 10) / 10 + Math.round( systemInfo.cpuLoad.currentload_system * 10) / 10)) * 10 ) / 10 %>%  "
        aria-valuenow="  <%= 100 - Math.round(((Math.round( systemInfo.sysProcess.pcpu * 10) / 10 + Math.round( systemInfo.cpuLoad.currentload_user * 10) / 10 + Math.round( systemInfo.cpuLoad.currentload_system * 10) / 10)) * 10 ) / 10 %>%   "
        aria-valuemin="0"
        aria-valuemax="100"
      ></div>
    </div>
    <b class="mt-1"><i class="fas fa-memory"></i> System RAM Usage</b><br/>
    <span class="mb-0" style="font-size:0.8rem;">
      <i class="fas fa-square text-warning"></i>
      <b>Other: </b><span id="otherRam"><%= helpers.generateBytes(systemInfo.memoryInfo.total -
        systemInfo.memoryInfo.free) %></span>
      <i class="fas fa-square text-info"></i>
      <b>OctoFarm: </b>
      <span id="octoRam"><%= helpers.generateBytes(systemInfo.memoryInfo.total / 100 *
        systemInfo.sysProcess.pmem) %>
  </span> 
      <i class="fas fa-square text-success"></i>
      <b>Free: </b><span id="freeRam"><%= helpers.generateBytes(systemInfo.memoryInfo.free) %></span>
    </span>

    <div class="progress mb-1">
      <div id="otherRamProg"
        class="progress-bar progress-bar-striped bg-warning"
        role="progressbar"
        style="width: <%= Math.round((systemInfo.memoryInfo.used / systemInfo.memoryInfo.total * 100) *10) /10 %>%"
        aria-valuenow="<%= Math.round((systemInfo.memoryInfo.used / systemInfo.memoryInfo.total * 100) *10) /10 %>%"
        aria-valuemin="0"
        aria-valuemax="100"
      ></div>
      <div id="octoRamProg"
        class="progress-bar progress-bar-striped bg-info"
        role="progressbar"
        style="width: <%= Math.round(systemInfo.sysProcess.pmem *10) /10 %>%"
        aria-valuenow="<%= Math.round(systemInfo.sysProcess.pmem *10) /10 %>%"
        aria-valuemin="0"
        aria-valuemax="100"
      ></div>
      <div id="freeRamProg"
        class="progress-bar progress-bar-striped bg-success"
        role="progressbar"
        style="width: <%= 100 - Math.round((systemInfo.memoryInfo.used / systemInfo.memoryInfo.total * 100) *10) /10 %>%"
        aria-valuenow="<%= 100 - Math.round((systemInfo.memoryInfo.used / systemInfo.memoryInfo.total * 100) *10) /10 %>%"
        aria-valuemin="0"
        aria-valuemax="100"
      ></div>
    </div>
  </div>
</div>
